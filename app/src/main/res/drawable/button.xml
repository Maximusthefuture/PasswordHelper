<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#a0a0a0" />
            <padding android:bottom="@dimen/drawable_padding" android:left="@dimen/drawable_padding" android:right="@dimen/drawable_padding" android:top="@dimen/drawable_padding" />

        </shape>
    </item>


    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorAccent" />
            <stroke android:color="@color/colorPrimaryDark" android:width="8dp">
                <gradient android:angle="45" android:centerColor="@color/colorPrimary" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorAccent" />
            </stroke>
            <padding android:bottom="@dimen/drawable_padding" android:left="@dimen/drawable_padding" android:right="@dimen/drawable_padding" android:top="@dimen/drawable_padding" />
        </shape>
    </item>

    <item>
        <shape>

            <stroke android:color="@color/colorPrimaryDark" android:width="4dp" />
            <gradient android:angle="45" android:centerColor="@color/colorPrimary" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorAccent" />
            <padding android:bottom="@dimen/drawable_padding" android:left="@dimen/drawable_padding" android:right="@dimen/drawable_padding" android:top="@dimen/drawable_padding" />

        </shape>


    </item>

</selector>